{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "posts",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "default": "Mon titre d'article",
      "required": true,
      "unique": true
    },
    "content": {
      "type": "customField",
      "options": {
        "preset": "toolbarBaloon"
      },
      "customField": "plugin::ckeditor5.CKEditor",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "author": {
      "type": "string",
      "default": "Sandrine MENEZES",
      "required": true
    },
    "date": {
      "type": "datetime",
      "required": true
    },
    "slug": {
      "type": "string",
      "default": "mon-titre-sans-espaces-ni-accents",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text",
      "required": true,
      "default": "3 premi√®res lignes de mon article"
    }
  }
}
